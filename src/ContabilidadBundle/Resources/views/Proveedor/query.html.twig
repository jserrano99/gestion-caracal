{% extends "ContabilidadBundle::menu.html.twig" %} 
{% block titulo %} CONSULTA DE PROVEEDORES {% endblock %}
{% block contenido %}
    {%include 'ContabilidadBundle::funciones.html.twig'%}
    <div class="container">
        {% for message in app.session.flashbag().get('status') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}
        <a href="{{path("addProveedor")}}" class="btn btn-success">Nuevo Proveedor</a>
        <hr/>
        
        <table class="tabla table" border="1">
            <thead>
                <tr class="success">
                    <th class="text-center text-bold">ID</th>
                    <th class="text-center text-bold">Descripci√≥n</th>
                    <th class="text-center text-bold">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for Proveedor in Proveedores %}
                    <tr>
                        <td class="text-center">{{Proveedor.id}}</td>
                        <td>{{Proveedor.descripcion}}</td>
                        <td class="text-center">
                        <a href="{{path("editProveedor",{ "id":Proveedor.id })}}" 
                              class="btn btn-warning">Editar</a>
                        <a href="{{path("resumenProveedor",{"id":Proveedor.id })}}" 
                           target="_blank"
                           class="btn btn-info">Asientos</a>
                        <input type="button" id="boton-cierre" 
                                  class="btn btn-danger" value="Eliminar" onClick="EliminarProveedor({{Proveedor.id}})">
                        </td>
                    </tr>
                {% endfor %} 
            </tbody>
        </table>
    </div>
{% endblock %}